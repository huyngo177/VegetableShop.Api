@model IEnumerable<VegetableShop.Mvc.Models.Categories.CategoryViewModel>;
<div class="hero__categories">
    <div class="hero__categories__all">
        <i class="fa fa-bars"></i>
        <span>All Categories</span>
    </div>
    <ul>
        @foreach (var item in @Model)
        {
            <li><a asp-action="GetProductByCategoryId" asp-controller="UserHome" asp-route-id="@item.Id">@item.Name</a></li>
        }
    </ul>
</div>