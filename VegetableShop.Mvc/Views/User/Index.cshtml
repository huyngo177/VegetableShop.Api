@using VegetableShop.Api.Dto.Page;
@model PageResult<VegetableShop.Mvc.Models.User.UserViewModel>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<br />
<h3 class="page-header text-center">USER</h3>

<div class="card-body">
    <div>
        <a class="btn btn-dark" asp-action="Revoke"><i class="fa-solid fa-circle-plus"></i> Clear Refresh Token</a>
    </div>
    <div class="col-md-12">
        <table class="table table-striped table-hover">
            <thead>
                @foreach (var item in Model.Items)
                {
                    <tr class="text-center">
                        <th>
                            @Html.DisplayNameFor(model => item.Id)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => item.UserName)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => item.Email)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => item.FirstName)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => item.LastName)
                        </th>
                        <th>
                            Actions
                        </th>
                    </tr>
                }
            </thead>
            <tbody>
                @foreach (var item in Model.Items)
                {
                    <tr class="text-center">
                        <td class="custom-td">
                            @Html.DisplayFor(modelItem => item.Id)
                        </td>
                        <td class="custom-td">
                            @Html.DisplayFor(modelItem => item.UserName)
                        </td>
                        <td class="custom-td">
                            @Html.DisplayFor(modelItem => item.Email)
                        </td>
                        <td class="custom-td">
                            @Html.DisplayFor(modelItem => item.FirstName)
                        </td>
                        <td class="custom-td">
                            @Html.DisplayFor(modelItem => item.LastName)
                        </td>
                        <td class="custom-td">
                            <form asp-action="Delete" asp-route-id="@item.Id" method="post">
                                <a asp-action="Update" asp-route-id="@item.Id" method="post" class="btn btn-primary">
                                    Update
                                </a>
                                <a asp-action="Detail" asp-route-id="@item.Id" method="get" class="btn btn-success">
                                    Detail
                                </a>
                                <button type="submit" class="btn btn-danger"
                                    onclick="return confirm('Are you sure you want to delete user: @item.UserName')">
                                    Delete
                                </button>
                            </form>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
    @await Component.InvokeAsync("Page", Model)
</div>