@using VegetableShop.Api.Dto.Page;
@model PageResult<VegetableShop.Mvc.Models.Products.ProductViewModel>

@{
    ViewData["Title"] = "Vegetable Shop";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row featured__filter">
    @foreach (var item in Model.Items)
    {
        <div class="col-lg-3 col-md-4 col-sm-6 mix">
            <div class="featured__item">
                <div class="featured__item__pic">
                    <img src="@item.ImagePath">
                    <ul class="featured__item__pic__hover">
                    </ul>
                </div>
                <div class="featured__item__text">
                    @if (@item.Status != "Unavailable")
                    {
                        <h6 hidden><a asp-action="Detail" asp-controller="ProductPage" asp-route-id="@item.Id" hidden>@item.Name</a></h6>
                        <h5 hidden>@item.Price</h5>
                    }
                    <h6><a asp-action="Detail" asp-controller="ProductPage" asp-route-id="@item.Id">@item.Name</a></h6>
                    <h5>@item.Price</h5>
                </div>
            </div>
        </div>
    }
</div>

@await Component.InvokeAsync("Page",Model)
