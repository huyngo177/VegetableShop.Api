@model IEnumerable<VegetableShop.Mvc.Models.Products.ProductViewModel>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<script src="~/js/jquery-1.11.1.min.js"></script>
<p>
    <a class="btn btn-primary" asp-action="Create">Create New</a>
</p>

@section Scripts{
    <script>
        setTimeout(function() {
            $('#msgAlert').fadeOut('slow');
        }, 2000);
    </script>
}
    <div>
        @if (TempData["Message"] != null)
    {
        <div id="msgAlert" class="alert alert-success" role="alert">
            @TempData["Message"]
        </div>
    }
</div>
<h3 class="page-header text-center">Product</h3>
<br />
<table class="table table-striped table-hover">
    <thead>
        <tr class="text-center">
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Stock)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DateCreated)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DateUpdated)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ImagePath)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CategoryName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Status)
            </th>
            <th>
                Actions
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr class="text-center">
                <td class="custom-td">
                    @Html.DisplayFor(modelItem => item.Id)
                </td>
                <td class="custom-td">
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td class="custom-td">
                    @Html.DisplayFor(modelItem => item.Price)
                </td>
                <td class="custom-td">
                    @Html.DisplayFor(modelItem => item.Stock)
                </td>
                <td class="custom-td">
                    @Html.DisplayFor(modelItem => item.DateCreated)
                </td>
                <td class="custom-td">
                    @Html.DisplayFor(modelItem => item.DateUpdated)
                </td>
                <td class="custom-td">
                    <img src="@item.ImagePath" alt="The image of @item.Name" width="60" height="60"></img>
                </td>
                <td class="custom-td">
                    @Html.DisplayFor(modelItem => item.CategoryName)
                </td>
                <td class="custom-td">
                    @Html.DisplayFor(modelItem => item.Status)
                </td>
                <td class="custom-td">
                    <form asp-action="Delete" asp-route-id="@item.Id" method="post">
                        <a asp-action="Update" asp-route-id="@item.Id" method="post" class="btn btn-primary">
                            Update
                        </a>
                        <a asp-action="Detail" asp-route-id="@item.Id" method="get" class="btn btn-success">
                            Detail
                        </a>
                        <button type="submit" class="btn btn-danger"
                            onclick="return confirm('Are you sure you want to delete product: @item.Name')">
                            Delete
                        </button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
