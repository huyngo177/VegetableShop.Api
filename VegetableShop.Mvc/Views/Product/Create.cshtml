@using VegetableShop.Mvc.Models.Category
@model VegetableShop.Mvc.Models.Products.CreateProductRequest

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<hr />
<div class="card shadow-lg border-0 rounded-lg mt-5">
    <div class="card-header"><h3 class="page-header text-center">Product</h3></div>
    <div class="card-body">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="row mb-3">
                <div class="col-md-6">
                    <div class="form-floating mb-3 mb-md-0">
                        <input asp-for="Name" class="form-control" />
                        <label asp-for="Name" class="control-label"></label>
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-floating">
                        <input asp-for="Price" class="form-control" />
                        <label asp-for="Price" class="control-label"></label>
                        <span asp-validation-for="Price" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <div class="row mb-3">
                <div class="col-md-6">
                    <div class="form-floating mb-3 mb-md-0">
                        <input asp-for="Stock" class="form-control" />
                        <label asp-for="Stock" class="control-label"></label>
                        <span asp-validation-for="Stock" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-floating mb-3 mb-md-0">
                        <input asp-for="DateCreated" class="form-control" />
                        <label asp-for="DateCreated" class="control-label"></label>
                        <span asp-validation-for="DateCreated" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <div class="row mb-3">
                <div class="col-md-6">
                    <div class="form-floating mb-3 mb-md-0">
                        <input asp-for="Image" type="file" class="form-control" />
                        <label asp-for="Image" class="control-label"></label>
                        <span asp-validation-for="Image" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-6">
                    <label asp-for="CategoryId" class="control-label"></label>
                    @if (ViewBag.Categories != null)
                    {
                        <select class="custom-select-sm">
                            <option selected>--Select Category--</option>
                            @foreach (var item in ViewBag.Categories)
                            {
                                <option value="@item.Id">@item.Name</option>
                            }
                        </select>
                    }
                </div>
            </div>
            <div>
                <input type="submit" value="Create" class="btn btn-primary" />
                <a class="btn btn-success" asp-action="Index" asp-controller="Product">Back</a>
            </div>
        </form>
    </div>
</div>
<script src="~/js/Chart.min.js"></script>
<script src="~/js/jquery-1.11.1.min.js "></script>
<script>
    $(document).ready(function() {
        $('#example').DataTable({
            stateSave: true,
        });
    });
</script>