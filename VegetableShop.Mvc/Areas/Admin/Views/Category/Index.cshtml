@model IEnumerable<VegetableShop.Mvc.Models.Categories.CategoryViewModel>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<br />
<h3 class="page-header text-center">CATEGORY</h3>

<div class="card-body">
    <div class="col-md-12">
        <div>
            <a class="btn btn-primary" asp-action="Create"><i class="fa-solid fa-circle-plus"></i> Create New</a>
        </div>
        <table class="table table-striped table-hover">
            <thead>
                <tr class="text-center">
                    <th>
                        @Html.DisplayNameFor(model => model.Id)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Name)
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td class="custom-td">
                            @Html.DisplayFor(modelItem => item.Id)
                        </td>
                        <td class="custom-td">
                            @Html.DisplayFor(modelItem => item.Name)
                        </td>
                        <td class="custom-td">
                            <form asp-action="Delete" asp-route-id="@item.Id" method="post">
                                <a asp-action="Update" asp-route-id="@item.Id" method="post" class="btn btn-primary">
                                    Update
                                </a>
                                <a asp-action="Detail" asp-route-id="@item.Id" method="get" class="btn btn-success">
                                    Detail
                                </a>
                                <button type="submit" class="btn btn-danger"
                                    onclick="return confirm('Are you sure you want to delete category: @item.Name')">
                                    Delete
                                </button>
                            </form>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>