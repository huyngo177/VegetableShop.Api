@using VegetableShop.Api.Dto.Page;
@model PageResult<VegetableShop.Mvc.Models.Products.ProductViewModel>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<script src="~/js/jquery-1.11.1.min.js"></script>

@section Scripts{
    <script>
        setTimeout(function() {
            $('#msgAlert').fadeOut('slow');
        }, 2000);
    </script>
}
    <div>
        @if (TempData["Message"] != null)
    {
        <div id="msgAlert" class="alert alert-success" role="alert">
            @TempData["Message"]
        </div>
    }
</div>
<br />
<h3 class="page-header text-center">PRODUCT</h3>

<div class="card-body">
    <div class="col-md-12">
        <div>
            <a class="btn btn-primary" asp-action="Create"><i class="fa-solid fa-circle-plus"></i> Create New</a>
        </div>
        <table class="table table-striped table-hover">
            <thead>
                <tr class="text-center">
                    <th>
                        Id
                    </th>
                    <th>
                        Name
                    </th>
                    <th>
                        Price
                    </th>
                    <th>
                        Stock
                    </th>
                    <th>
                        Date Created
                    </th>
                    <th>
                        Image
                    </th>
                    <th>
                        Category Name
                    </th>
                    <th>
                        Status
                    </th>
                    <th>
                        Actions
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.Items)
                {
                    <tr class="text-center">
                        <td class="custom-td">
                            @Html.DisplayFor(modelItem => item.Id)
                        </td>
                        <td class="custom-td">
                            @Html.DisplayFor(modelItem => item.Name)
                        </td>
                        <td class="custom-td">
                            @Html.DisplayFor(modelItem => item.Price)
                        </td>
                        <td class="custom-td">
                            @Html.DisplayFor(modelItem => item.Stock)
                        </td>
                        <td class="custom-td">
                            @Html.DisplayFor(modelItem => item.DateCreated)
                        </td>
                        <td class="custom-td">
                            <img src="@item.ImagePath" width="60" height="60">
                        </td>
                        <td class="custom-td">
                            @Html.DisplayFor(modelItem => item.CategoryName)
                        </td>
                        <td class="custom-td">
                            @Html.DisplayFor(modelItem => item.Status)
                        </td>
                        <td class="custom-td">
                            <form asp-action="Delete" asp-route-id="@item.Id" method="post">
                                <a asp-action="Update" asp-route-id="@item.Id" method="post" class="btn btn-primary">
                                    Update
                                </a>
                                <a asp-action="Detail" asp-route-id="@item.Id" method="get" class="btn btn-success">
                                    Detail
                                </a>
                                <button type="submit" class="btn btn-danger"
                                    onclick="return confirm('Are you sure you want to delete product: @item.Name')">
                                    Delete
                                </button>
                            </form>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
