@using VegetableShop.Api.Dto.Page;
@model PageResult<VegetableShop.Mvc.Models.User.UserViewModel>

<table class="table table-striped table-hover">
    <thead>
        <tr class="text-center">
            <th>
                Id
            </th>
            <th>
                Username
            </th>
            <th>
                Email
            </th>
            <th>
                First Name
            </th>
            <th>
                Last Name
            </th>
            <th>
                Actions
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Items)
        {
            <tr class="text-center">
                <td class="custom-td">
                    @Html.DisplayFor(modelItem => item.Id)
                </td>
                <td class="custom-td">
                    @Html.DisplayFor(modelItem => item.UserName)
                </td>
                <td class="custom-td">
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td class="custom-td">
                    @Html.DisplayFor(modelItem => item.FirstName)
                </td>
                <td class="custom-td">
                    @Html.DisplayFor(modelItem => item.LastName)
                </td>
                <td class="custom-td">
                    <form style="text-decoration:none" asp-action="RestoreLockedStatus" asp-route-id="@item.Id"
                      onsubmit="return jQueryDelete('#viewUsersDeleted',this,'Are you sure to restore this record ?','Restore')" class="d-inline">
                        <button type="submit" class="btn btn-success">
                            <i class="fa fa-edit" aria-hidden="true"></i>
                            Restore
                        </button>
                    </form>
                    <form style="text-decoration:none" asp-action="Delete" asp-route-id="@item.Id"
                      onsubmit="return jQueryDelete('#viewUsersDeleted',this,'Are you sure to forever delete this record ?','Delete')" class="d-inline">
                        <button type="submit" class="btn btn-danger">
                            <i class="fa fa-trash" aria-hidden="true"></i>
                            Delete
                        </button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>

