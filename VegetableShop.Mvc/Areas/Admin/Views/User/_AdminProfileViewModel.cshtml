@model VegetableShop.Mvc.Models.User.UserViewModel

<table class="table table-striped" style="margin-top: 25px;">
    <tr>
        <th scope="row">Username:</th>
        <th>@Html.DisplayFor(model => model.UserName)</th>
    </tr>
    <tr>
        <th scope="row">@Html.DisplayNameFor(model => model.Email):</th>
        <th>@Html.DisplayFor(model => model.Email)</th>
    </tr>
    <tr>
        <th scope="row">Firstname:</th>
        <th>@Html.DisplayFor(model => model.FirstName)</th>
    </tr>
    <tr>
        <th scope="row">Lastname:</th>
        <th>@Html.DisplayFor(model => model.LastName)</th>
    </tr>
    <tr>
        <th scope="row">Phone number:</th>
        <th>@Html.DisplayFor(model => model.PhoneNumber)</th>
    </tr>
    <tr>
        <th scope="row">@Html.DisplayNameFor(model => model.Address):</th>
        <th>@Html.DisplayFor(model => model.Address)</th>
    </tr>
    <tr>
        <th scope="row">Password:</th>
        <th>
            <a class="text-danger"
               onclick="showInPopup('@Url.Action("UpdatePassword","User",new {id=Model.Id},Context.Request.Scheme)','Update Password')">
                (***) Update password
            </a>
        </th>
    </tr>
</table>
