@using VegetableShop;
@using VegetableShop.Api.Dto.Page;
@model PaginationResult<VegetableShop.Mvc.Models.User.UserViewModel>

<table class="table table-striped table-hover">
    <thead>
        <tr class="text-center">
            <th>
                Id
            </th>
            <th>
                Username
            </th>
            <th>
                Email
            </th>
            <th>
                First Name
            </th>
            <th>
                Last Name
            </th>
            <th>
                Actions
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr class="text-center">
                <td class="custom-td">
                    @Html.DisplayFor(modelItem => item.Id)
                </td>
                <td class="custom-td">
                    @Html.DisplayFor(modelItem => item.UserName)
                </td>
                <td class="custom-td">
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td class="custom-td">
                    @Html.DisplayFor(modelItem => item.FirstName)
                </td>
                <td class="custom-td">
                    @Html.DisplayFor(modelItem => item.LastName)
                </td>
                <td class="custom-td">
                    <a onclick="showInPopup('@Url.Action("Detail","User",new {id=item.Id},Context.Request.Scheme)','Detail')" class="btn btn-success">
                        <i class="fa fa-eye" aria-hidden="true"></i>
                        Detail
                    </a>
                    <form style="text-decoration:none" asp-action="RevoleByUsername" asp-route-username="@item.UserName"
                      onsubmit="return jQueryDelete('#viewAll',this,'Are you sure to revoke this record ?','Revoke')" class="d-inline">
                        <button type="submit" class="btn btn-warning">
                            <i class="fa fa-edit" aria-hidden="true"></i>
                            Revoke
                        </button>
                    </form>
                    <form style="text-decoration:none" asp-action="Lock" asp-route-id="@item.Id"
                      onsubmit="return jQueryDelete('#viewAll',this,'Are you sure to lock this record ?','Lock')" class="d-inline">
                        <button type="submit" class="btn btn-danger">
                            <i class="fa-solid fa-lock" aria-hidden="true"></i>
                            Lock
                        </button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
